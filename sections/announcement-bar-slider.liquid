<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css'>
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css'>
    
  <style>
  
  #announcement-bar-slide{
    padding: 10px 0;
    background-color: #000000;
    overflow: hidden;
  }
  .announcement-bar-slider-item p{
      padding: 5px 20px;
      color: white;
      font-family: Rubik;
      font-size: 14px;
      font-weight: 500;
      line-height: 16.59px;
      text-align: center;
      text-underline-position: from-font;
      text-decoration-skip-ink: none;
  }
  .announcement-bar-slider-item p{
      font-size: 14px;
      margin: 0;
  }
  .announcement-bar-slider-content{
    display: flex;
    align-items: center;
  }
  </style>
  <div id="announcement-bar-slide"> 
    {% for block in section.blocks %}
    <div class="announcement-bar-slider-item">
        <div class="announcement-bar-slider-content">
            <div class="slider-dots">{{'icon-star.svg' | inline_asset_content }}</div>
            <p>{{ block.settings.title }}</p>
        </div>
    </div>
    {% endfor %}
    
</div>
<script src='https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js'></script>
      <script id="rendered-js" >
$('#announcement-bar-slide').slick({
  infinite: true,          // Enable infinite looping
            variableWidth: true,
            slidesToShow: 1,   
            infinite: true,      // Show one slide at a time
            slidesToScroll: 1,       // Scroll one slide at a time
            speed: 8000,             // Speed of scroll (milliseconds)
            autoplay: true,          // Enable autoplay
            autoplaySpeed: 0,        // Speed of autoplay (0 means no delay between slides)
            arrows: false,           // Hide arrows
            dots: false,             // Hide dots
            cssEase: 'linear',       // Smooth and continuous animation
            pauseOnHover: false,
            centerMode: false,
});
</script>



{% schema %}
{
  "name": "Announcement bar slider",
  "max_blocks": 12,
  "class": "announcement-bar-section",
  "enabled_on": {
    "templates": ["*"],
    "groups": ["header"]
  },
  "settings": [

  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "t:sections.announcement-bar.blocks.announcement.settings.text.default",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement bar slider",
      
    }
  ]
}
{% endschema %}