                },
                {
                    "type": "textarea",
                    "id": "description",
                    "label": "Description Text",
                    "default": "Welcome to my shop!"
                }
            ],
            "blocks": [
                {
                    "type": "image",
                    "name": "Image",
                    "settings": [
                        {
                            "type": "image_picker",
                            "id": "image",
                            "label": "Icon"
                        },
                        {
                            "type": "text",
                            "id": "title",
                            "label": "Title",
                            "default": "Title Here"
                        },
                        {
                            "type": "textarea",
                            "id": "description",
                            "label": "Description Text",
                            "default": "Welcome to my shop!"
                        },
                        {
                            "type": "url",
                            "id": "link",
                            "label": "Link"
                        }
    
                    ]   
                }
            ],
            "presets": [
                {
